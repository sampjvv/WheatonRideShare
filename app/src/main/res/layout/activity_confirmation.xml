<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="224dp"
        android:layout_height="58dp"
        android:text="Driver Username"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="96dp"
        android:layout_height="103dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="537dp"
        android:layout_marginBottom="91dp"
        android:backgroundTint="#23cd4f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="96dp"
        android:layout_height="103dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="#c31313"
        android:text="X"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirm_button"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/baseline_check_24"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="550dp" />

    <TextView
        android:id="@+id/rideinfoheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Information:"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="251dp" />

    <TextView
        android:id="@+id/rideinfo"
        android:layout_width="383dp"
        android:layout_height="121dp"
        android:text="--Details--"
        android:textSize="80dp"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/dateandtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date/Time"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Count"
        tools:layout_editor_absoluteX="332dp"
        tools:layout_editor_absoluteY="414dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="95dp"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>