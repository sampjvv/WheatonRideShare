<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/off_white"
    tools:context=".PostScreenActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back_btn"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="Post Details"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/confirmRide"
            android:layout_width="52dp"
            android:layout_height="47dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/confirm_button"
            android:backgroundTint="@color/gold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/vertical_info"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <!-- Include all child LinearLayouts and their children here, positioning them relative to each other -->
        <LinearLayout
            android:id="@+id/name_and_profilepic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_view"
                android:layout_width="104dp"
                android:layout_height="103dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/circular_bg"
                android:backgroundTint="@color/primary"
                android:scaleType="centerCrop"
                android:src="@drawable/person_icon" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Charles"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location_header"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Location ->"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/real_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Wheaton Downtown"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_model_layout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/car_model_header"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Make of Car ->"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/real_car_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Navy 2014\nChevy Cruze"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seat_count_header"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Number of Seats ->"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/real_seat_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="_"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:color="@style/textInverse"
            android:elevation="5dp"
            android:enabled="true"
            android:gravity="top|start"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:textColor="@color/black"
            android:textSize="24dp" />

    </LinearLayout>


    <Button
        android:id="@+id/post_to_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vertical_info"
        android:layout_centerHorizontal="true"
        android:text="Direct Message" />

</RelativeLayout>